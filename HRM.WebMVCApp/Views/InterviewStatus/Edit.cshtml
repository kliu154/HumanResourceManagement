@model InterviewStatusRequestModel;

<div class="container">
    <form asp-controller="InterviewStatus" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="my-5 row col-12">
            <label for="title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="my-5">
            <label for="isActive">Is Active</label>
            <p>
                <input type="radio" id="true" value="True" asp-for="IsActive" />
                <label for="true">True</label>
            </p>
            <p>
                <input type="radio" id="false" value="False" asp-for="IsActive" />
                <label for="true">False</label>
            </p>
            <span asp-validation-for="IsActive"></span>
        </div>
        <input type="submit" value="Edit Interview Status" class="btn btn-primary" />
    </form>
</div>