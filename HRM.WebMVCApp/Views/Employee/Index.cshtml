@model IEnumerable<EmployeeResponseModel>;
<div class="page-header">
    <h1>List of Employees</h1>
</div>
<a asp-action="Create" asp-controller="Employee">Add New Employee</a>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Phone
            </th>
            <th>
                Email Id
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                SSN
            </th>
            <th>
                Current Address
            </th>
            <th>
                Hire Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Employee Role
            </th>
            <th>
                Employee Type
            </th>
            <th>
                Employee Status
            </th>
            <th>
                Manager Id
            </th>
            <th colspan="2">
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var m in Model)
            {
                <tr>
                    <td>@m.FirstName</td>
                    <td>@m.LastName</td>
                    <td>@m.Phone</td>
                    <td>@m.EmailId</td>
                    <td>@m.DOB</td>
                    <td>@m.SSN</td>
                    <td>@m.CurrentAddress</td>
                    <td>@m.HireDate</td>
                    <td>@m.EndTime</td>
                    <td>@m.EmployeeRoleId</td>
                    <td>@m.EmployeeTypeId</td>
                    <td>@m.EmployeeStatusId</td>
                    <td>@m.ManagerId</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Employee" asp-route-id="@m.Id">Edit</a>
                    </td>
                    <td><a asp-action="Delete" asp-controller="Employee" asp-route-id="@m.Id">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>